<%- include('header') %>

<div class="signmodal">
        <div class="signmodal_outer">
            
            <form class="signmodal_content" action="/re/register" method="post" autocomplete="off">           
                <h1>注册</h1>
                </br>
                <div class="signmodal_title">
                    <span class="signpre_text">账号：</span>
                    <input type="text" name="userName" autofocus="autofocus" placeholder="请使用数字、字母、下划线进行注册">
                </div>
                <div class="signmodal_title">      
                    <span class="signpre_text">密码：</span>               
                    <input type="text" name="passWord" placeholder="请输入注册密码">
                </div>
                <% if(error) { %>
                    <h5><%= error %></h5>
                <% } %>             

                <div class="signconfirm">
                    <input type="submit" name="button" value="确认注册">
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="/script/jquery-3.1.1.min.js"></script>
    <script>
        $(document).ready(function(){
            if($('.signmodal_content h5')[0].innerHTML){
                $('.signmodal_content h5').fadeOut(1000);
            }
        })
    </script>
<%- include('footer') %>