<%- include('header') %>
<div class="signmodal">
    
    <div class="signmodal_outer">
        
        <form class="signmodal_content" action="/re/signin" method="post" autocomplete="off">
            <h1>登录</h1>
            </br>
            <div class="signmodal_title">
                <span class="signpre_text">账号：</span>
                <input type="text" name="userName" autofocus="autofocus" placeholder="">
            </div>
            <div class="signmodal_title">      
                <span class="signpre_text">密码：</span>               
                <input type="password" name="passWord">
            </div>
            <% if(error) { %>
                <h5><%= error %></h5>
            <% } %>    
            <div class="signconfirm">
                <input type="submit" name="button" value="登录">
            </div>
        </form>
    </div>
</div>

<script type="text/javascript" src="/script/jquery-3.1.1.min.js"></script>
    <script>
        $(document).ready(function(){
            if($('.signmodal_content h5')[0].innerHTML){
                $('.signmodal_content h5').fadeOut(1000);
            }
        })
    </script>


<%- include('footer') %>